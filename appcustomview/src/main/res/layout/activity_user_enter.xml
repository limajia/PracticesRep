<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userEnter.UserEnterActivity">

    <com.mlj.customviews.userEnter.UserEnterView
        android:id="@+id/user_enter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        app:defaultString="多位朋友赞过" />

    <Button
        android:id="@+id/addPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="addPerson"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/deletePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="deletePerson"
        android:textAllCaps="false" />
</LinearLayout>